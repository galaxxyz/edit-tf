# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
# 4 space indentation
[*.{html,js,css}]
charset = utf-8
indent_style = tab
indent_size = 4
